{
    "extends": ["next/core-web-vitals", "next/typescript", "prettier"],
    "rules": {
        "semi": ["error"],
        "quotes": ["error", "single"],
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-floating-promises": "warn",
        "@typescript-eslint/no-unsafe-argument": "warn",
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "tabWidth": 4,
                "printWidth": 150
            }
        ]
    }
}
